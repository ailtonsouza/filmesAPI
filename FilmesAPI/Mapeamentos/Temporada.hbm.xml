<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="FilmesAPI" namespace="FilmesAPI.Entidades">
    <class name="Temporada">
        <id name="Id">
            <generator class="identity"/>
        </id>
        <property name="NumeroDaTemporada" not-null="true"/>

        <bag name="Diretor" table="TemporadaDiretores" cascade="save-update">
            <key column="TemporadaId" />
            <many-to-many class="Diretor" column="diretorId"/>
        </bag>

        <many-to-one name="Serie" column="SerieId" fetch="join" not-null="true"/>

        <bag name="Ator" table="TemporadaAtores" cascade="save-update">
            <key column="TemporadaId" />
            <many-to-many class="Ator" column="atorId"/>
        </bag>

        <set name="Epsodio" fetch="join" >
            <key column="TemporadaId" />
            <one-to-many class="Epsodio"/>
        </set>
        
    </class>
</hibernate-mapping>