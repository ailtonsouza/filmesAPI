<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="FilmesAPI" namespace="FilmesAPI.Entidades">
    <class name="Temporada">
        <id name="Id">
            <generator class="identity"/>
        </id>
        <property name="NumeroDaTemporada" not-null="true"/>

        <bag name="TemporadaDiretor" cascade="all-delete-orphan" inverse="true">
            <key column="TemporadaId" />
            <one-to-many class="TemporadaDiretor" />
        </bag>

        <many-to-one name="Serie" column="SerieId" fetch="join" not-null="true"/>

        <bag name="TemporadaAtor" cascade="all-delete-orphan" inverse="true">
            <key column="TemporadaId" />
            <one-to-many class="TemporadaAtor" />
        </bag>   
        
        <bag name="Epsodio" cascade="all-delete-orphan" inverse="true">
            <key column="TemporadaId" />
            <one-to-many class="Epsodio"/>
        </bag>


        
    </class>
</hibernate-mapping>