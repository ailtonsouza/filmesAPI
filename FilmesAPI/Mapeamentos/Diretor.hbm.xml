<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="FilmesAPI" namespace="FilmesAPI.Entidades">
    <class name="Diretor">
        <id name="Id">
            <generator class="identity"/>
        </id>
        <property name="NomeCompleto" not-null="true"/>
       <property name="DataNascimento" not-null="true"/>

                <bag name="FilmeDiretor" cascade="save-update">
                    <key column="DiretorId" />
                    <one-to-many class="FilmeDiretor"/>
                </bag>

        <bag name="TemporadaDiretor" cascade="save-update">
            <key column="DiretorId" />
            <one-to-many class="TemporadaDiretor" />
        </bag>



    </class>
</hibernate-mapping>

