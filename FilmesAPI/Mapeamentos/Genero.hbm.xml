<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="FilmesAPI" namespace="FilmesAPI.Entidades">
    <class name="Genero">
        <id name="Id">
            <generator class="identity"/>
        </id>
        <property name="Nome" not-null="true"/>

        <bag name="FilmeGenero" cascade="save-update">
            <key column="GeneroId" />
            <one-to-many class="FilmeGenero"/>
        </bag>
        
        <bag name="SerieGenero" cascade="save-update">
            <key column="GeneroId" />
            <one-to-many class="SerieGenero" />
        </bag>

        
    </class>
</hibernate-mapping>