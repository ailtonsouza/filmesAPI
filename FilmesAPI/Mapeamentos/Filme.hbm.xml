<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="FilmesAPI" namespace="FilmesAPI.Entidades">
    <class name="Filme">
        <id name="Id">
            <generator class="identity"/>
        </id>
        <property name="Titulo" not-null="true"/>
        <property name="Duracao" not-null="true"/>

        <bag name="FilmeDiretor" cascade="all-delete-orphan" inverse="true" >
            <key column="FilmeId" />
            <one-to-many class="FilmeDiretor"/>
        </bag>

        <bag name="FilmeAtor" cascade="all-delete-orphan" inverse="true" >
            <key column="FilmeId" />
            <one-to-many class="FilmeAtor" />
        </bag>

        <bag name="FilmeGenero" cascade="all-delete-orphan" inverse="true" >
            <key column="FilmeId" />
            <one-to-many class="FilmeGenero"/>
        </bag>

        <bag name="Oscar" fetch="join">
            <key column="FilmeId" />
            <one-to-many class="Oscar"/>
        </bag>
        
        
        


    </class>
</hibernate-mapping>